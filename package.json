{
  "name": "narr-material-ui",
  "version": "0.1.0",
  "description": "My UI components using Typescript+React+Material-UI",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/narr/narr-material-ui.git"
  },
  "author": "https://github.com/narr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/narr/narr-material-ui/issues"
  },
  "homepage": "https://github.com/narr/narr-material-ui/blob/master/README.md",
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@material-ui/core": "^3.8.1",
    "@storybook/addon-options": "^4.1.4",
    "@storybook/react": "^4.1.4",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.11",
    "@types/storybook__react": "^4.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.11.1",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^22.4.4",
    "jest-environment-enzyme": "^7.0.1",
    "jest-enzyme": "^7.0.1",
    "jest-html-reporter": "^2.4.2",
    "lerna": "^3.8.4",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-live": "^1.12.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  },
  "scripts": {
    "doc": "start-storybook -p 9001 -c ./config/.storybook",
    "doc:build": "rimraf ./static/storybook && build-storybook -c ./config/.storybook -o ./static/storybook",
    "test": "jest --config=./config/jest/jest.config.js --watch",
    "test:ci": "jest --config=./config/jest/jest.config.ci.js --coverage",
    "typecheck": "tsc --noEmit",
    "tslint": "tslint -c ./tslint.json -p ./",
    "eslint": "eslint \"**/*.js\"",
    "lint": "npm run typecheck && npm run tslint && npm run eslint",
    "cm": "git-cz",
    "ci:cmlint": "commitlint -f=origin/develop -t=develop",
    "ci": "npm run lint && npm run test:ci",
    "prebuild": "rimraf ./packages/narr-material-ui-core/dist",
    "build": "tsc -p ./config/typescript/tsconfig.prod.json",
    "build:static": "rimraf ./static && npm run doc:build && npm run test:ci",
    "pub": "npm run build && lerna publish --conventional-commits",
    "pub:test": "npm run pub -- --skip-git --skip-npm",
    "pub:ci": "npm run pub -- --yes"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        100
      ]
    }
  }
}
