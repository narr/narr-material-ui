{
  "name": "narr-material-ui",
  "version": "0.1.0",
  "description": "My UI components using Typescript+React+Material-UI",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/narr/narr-material-ui.git"
  },
  "author": "https://github.com/narr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/narr/narr-material-ui/issues"
  },
  "homepage": "https://github.com/narr/narr-material-ui/blob/master/README.md",
  "devDependencies": {
    "eslint": "^5.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "lerna": "^2.11.0",
    "narr-material-ui-common": "latest",
    "prettier": "^1.13.7",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0"
  },
  "optionalDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "commitizen": "^2.10.1",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "cm": "git-cz",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "tslint": "tslint -c ./tslint.json -p ./",
    "eslint": "eslint **/*.js",
    "lint": "npm run tslint && npm run eslint",
    "test": "jest --config=./config/jest/jest.config.ci.js --coverage",
    "test:watch": "jest --config=./config/jest/jest.config.js --coverage --watch",
    "test:ci": "npm run test -- --bail",
    "test:doc:nmui-core": "cross-env JEST_TARGET=core jest --config=./config/jest/jest.config.prod.js --coverage",
    "ci:cmlint": "commitlint -f=origin/develop -t=develop",
    "ci": "npm run lint && npm run test:ci",
    "storybook": "start-storybook -p 9001 -c ./config/.storybook",
    "storybook:doc:nmui-core": "cross-env STORYBOOK_TARGET=core build-storybook -c ./config/.storybook -o ./docs/narr-material-ui-core/storybook",
    "doc:nmui-core": "rimraf ./docs/narr-material-ui-core && npm run test:doc:nmui-core && npm run storybook:doc:nmui-core",
    "doc:all": "npm run lint && npm run doc:nmui-core",
    "build:nmui-core": "rimraf ./packages/narr-material-ui-core/dist && tsc -p ./config/typescript/tsconfig.prod.nmui-core.json",
    "build:all": "npm run lint && npm run build:nmui-core",
    "pub": "npx lerna publish --conventional-commits",
    "pub:test": "npm run pub -- --skip-git --skip-npm",
    "pub:ci": "npm run pub -- --yes"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        90
      ]
    }
  }
}
